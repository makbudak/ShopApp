@{
    ViewData["Title"] = "Üye Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card py-5 shadow">
    <div class="card-body">
        <div class="row py-5">
            <div class="col-md-4 offset-md-4">
                <div class="card shadow">
                    <div class="card-header bg-white py-3">
                        <h4><i class="k-icon k-i-plus-circle k-icon-md"></i> Üye Ol</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-5">
                            <form id="registerForm">
                                <div class="mb-3 mt-3">
                                    <label class="form-label">Adı</label>
                                    <input type="text"
                                           id="txtName"
                                           name="txtName"
                                           class="w-100"
                                           required
                                           data-required-msg="Adı giriniz." />
                                    <span class="k-invalid-msg" data-for="txtName"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label">Soyadı</label>
                                    <input type="text"
                                           id="txtSurname"
                                           name="txtSurname"
                                           class="w-100"
                                           required
                                           data-required-msg="Soyadı giriniz." />
                                    <span class="k-invalid-msg" data-for="txtSurname"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label">Email Adresi</label>
                                    <input type="email"
                                           id="txtEmailAddress"
                                           name="txtEmailAddress"
                                           class="w-100"
                                           required
                                           data-required-msg="Email adresi giriniz."
                                           data-email-msg="Email formatı uygun değil." />
                                    <span class="k-invalid-msg" data-for="txtEmailAddress"></span>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label class="form-label">Telefon</label>
                                    <input type="text"
                                           id="txtPhone"
                                           name="txtPhone"
                                           class="w-100"
                                           required
                                           data-required-msg="Telefon giriniz." />
                                    <span class="k-invalid-msg" data-for="txtPhone"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Şifre</label>
                                    <input type="password"
                                           id="txtPassword"
                                           name="txtPassword"
                                           class="w-100"
                                           required
                                           data-required-msg="Şifre giriniz." />
                                    <span class="k-invalid-msg" data-for="txtPassword"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Şifre Tekrar</label>
                                    <input type="password"
                                           id="txtRePassword"
                                           name="txtRePassword"
                                           class="w-100"
                                           required
                                           data-required-msg="Şifreyi tekrar giriniz." />
                                    <span class="k-invalid-msg" data-for="txtRePassword"></span>
                                </div>

                                <div class="mb-3">
                                    <button id="btnRegister"
                                            class="btn btn-primary float-end"
                                            type="submit">
                                        Kaydet
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                        <div class="my-4 text-center">
                            Üye misiniz?
                            <a class="text-decoration-none" href="/account/login">
                                Giriş Yap
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script src="~/js/pages/frontend/account/register.js"></script>
}
