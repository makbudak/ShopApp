
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_ProfileMenu")
    </div>
    <div class="col-md-9" >
        <el-card class="box-card">
            <template #header>
                <h5><i class="el-icon-key"></i> Şifre Değiştir</h5>
            </template>
            <div class="row mt-3">
                <div class="col-md-12">
                    <el-form ref="changePasswordForm" :model="customer" :rules="rules" label-position="top">
                        <el-row :gutter="20">
                            <el-col :span="12">
                                <el-form-item label="Eski Şifre" prop="oldPassword">
                                    <el-input placeholder="Eski Şifre" v-model="customer.oldPassword" show-password></el-input>
                                </el-form-item>
                                <el-form-item label="Yeni Şifre" prop="newPassword">
                                    <el-input placeholder="Yeni Şifre" v-model="customer.newPassword" show-password></el-input>
                                </el-form-item>
                                <el-form-item label="Yeni Şifre Tekrar" prop="reNewPassword">
                                    <el-input placeholder="Yeni Şifre Tekrar" v-model="customer.reNewPassword" show-password></el-input>
                                </el-form-item>
                            </el-col>
                        </el-row>
                        <el-form-item>
                            <el-button type="success" v-on:click="onSubmit('changePasswordForm')" class="bg-success">Kaydet</el-button>
                        </el-form-item>
                    </el-form>
                </div>
            </div>
        </el-card>        
    </div>
</div>


@section Scripts{
    <script src="~/js/pages/frontend/account/change-password.js"></script>
}
