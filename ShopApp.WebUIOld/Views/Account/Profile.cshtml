
@{
    ViewData["Title"] = "Hesabım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_ProfileMenu")
    </div>
    <div class="col-md-9">
        <el-card class="box-card">
            <template #header>
                <h5><i class="el-icon-info"></i> Kullanıcı Bilgileri</h5>
            </template>
            <div class="row mt-3">
                <div class="col-md-12">
                    <el-form ref="profileForm" :model="customer" :rules="rules" label-position="top">
                        <el-row :gutter="20">
                            <el-col :span="12">
                                <el-form-item label="Email Adresi" class="bold">
                                    <el-input placeholder="Email Adresi" v-model="customer.emailAddress" disabled></el-input>
                                </el-form-item>

                                <el-form-item label="Adı" prop="name" class="bold">
                                    <el-input placeholder="Adı" v-model="customer.name"></el-input>
                                </el-form-item>

                                <el-form-item label="Soyadı" prop="surname" class="bold">
                                    <el-input placeholder="Soyadı" v-model="customer.surname"></el-input>
                                </el-form-item>

                                <el-form-item label="Telefon" class="bold">
                                    <el-input placeholder="Telefon" v-model="customer.phone"></el-input>
                                </el-form-item>
                            </el-col>
                        </el-row>

                        <el-form-item>
                            <el-button type="success" v-on:click="onSubmit('profileForm')" class="bg-success">Kaydet</el-button>
                        </el-form-item>
                    </el-form>
                </div>
            </div>
        </el-card>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/frontend/account/profile.js"></script>
}
