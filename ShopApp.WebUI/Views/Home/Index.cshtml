@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <el-card style="height: 300px;">
            <template #header>
                <h5>
                    <i class="el-icon-s-grid"></i>
                    &nbsp;Kategoriler
                </h5>
            </template>
            <el-scrollbar max-height="200px">
                <el-input placeholder="Kategorilerde Ara" v-model="filterText"> </el-input>

                <el-tree class="mt-3"
                         :data="productCategories"
                         :props="defaultProps"
                         :filter-node-method="filterNode"
                         ref="tree">
                    <template #default="{ node, data }">
                        <div>
                            <a class="text-decoration-none text-dark" v-bind:href="data.url"> {{ data.name }}</a>
                        </div>
                    </template>
                </el-tree>
            </el-scrollbar>
        </el-card>
    </div>
    <div class="col-md-8">
        <div style="height: 300px;">
            <el-carousel indicator-position="outside">
                <el-carousel-item v-for="item in 4" :key="item">
                    <a v-bind:href="">
                        <img class="w-100 h-100" src="https://n11-image.mncdn.com/a1/720_400/21/09/09/77/42/84/33/71/66/01/94/73/73423172283603401171.jpg" />
                    </a>
                </el-carousel-item>
            </el-carousel>
        </div>
    </div>
</div>

<h5 class="mt-4">Ürünler</h5>

<div class="row mt-4">
    <div class="col-md-3 mb-3" v-for="item in 8" :key="item">
        <div class="card shadow">
            <img class="card-img-top" src="https://shadow.elemecdn.com/app/element/hamburger.9cf7b091-55e9-11e9-a976-7f4d0b07eef6.png" />
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <time class="time">{{ currentDate }}</time>
                <el-button type="text" class="button">Operating</el-button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <h5 class="mt-1">Blog Yazıları</h5>
    </div>
    <div class="col-6">
        <a href="/blog" class="btn btn-secondary btn-sm float-end">Tümü</a>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3" v-for="item in 8" :key="item">
        <div class="card mb-3 shadow">
            <img class="card-img-top" src="https://shadow.elemecdn.com/app/element/hamburger.9cf7b091-55e9-11e9-a976-7f4d0b07eef6.png" />
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <time class="time">{{ currentDate }}</time>
                <el-button type="text" class="button">Operating</el-button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/pages/frontend/home.js"></script>
}
