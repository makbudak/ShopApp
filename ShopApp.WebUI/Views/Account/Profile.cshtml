
@{
    ViewData["Title"] = "Hesabım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3 mb-3">
    <div class="col-md-3">
        @await Html.PartialAsync("_profileMenu")
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <h5><i class="k-icon k-i-info"></i> Kullanıcı Bilgileri</h5>
            </div>
            <div class="card-body">                
                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label bold">Email Adresi</label>
                            <input id="txtEmailAddress" type="text" readonly disabled class="w-100" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label bold">Adı</label>
                            <input id="txtName" type="text" class="w-100" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label bold">Soyadı</label>
                            <input id="txtSurname" type="text" class="w-100" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label bold">Telefon No</label>
                            <input id="txtPhone" type="text" class="w-100" />
                        </div>

                        <button class="btn btn-success float-end">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#txtEmailAddress").kendoTextBox({
            placeholder: "Email Adresi",
        });

        $("#txtName").kendoTextBox({
            placeholder: "Adı",
        });

        $("#txtSurname").kendoTextBox({
            placeholder: "Soyadı",
        });

        $("#txtPhone").kendoTextBox({
            placeholder: "Telefon No",
        });
    </script>
}
