@using Microsoft.AspNetCore.Http;

<div class="navbar bg-light navbar-expand-sm border-bottom fixed-top py-0" ng-controller="navbarController">
    <div class="container">
        <a href="/" class="navbar-brand text-dark">Shop App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav me-auto my-2 my-lg-0">
                <li class="nav-item">
                    <ul class="text-dark"
                        kendo-menu
                        k-orientation="'horizontal'"
                        k-rebind="'horizontal'">
                        <li>
                            Ürün Kategorileri
                            <ul>
                                <li>
                                    Footwear
                                    <ul>
                                        <li>Leisure Trainers</li>
                                        <li>Running Shoes</li>
                                        <li>Outdoor Footwear</li>
                                        <li>Sandals/Flip Flops</li>
                                        <li>Footwear Accessories</li>
                                    </ul>
                                </li>
                                <li>
                                    Leisure Clothing
                                    <ul>
                                        <li>T-Shirts</li>
                                        <li>Hoodies &amp; Sweatshirts</li>
                                        <li>Jackets</li>
                                        <li>Pants</li>
                                        <li>Shorts</li>
                                    </ul>
                                </li>
                                <li>
                                    Sports Clothing
                                    <ul>
                                        <li>Football</li>
                                        <li>Basketball</li>
                                        <li>Golf</li>
                                        <li>Tennis</li>
                                        <li>Swimwear</li>
                                    </ul>
                                </li>
                                <li>Accessories</li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <li class="nav-item mt-md-2">
                    <a class="nav-link text-dark px-3" href="#">Blog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark mt-md-2 px-3" href="#">İletişim</a>
                </li>
            </ul>

            <div class="d-flex">
                @if (Context.Session.GetInt32("CustomerId") != null)
                {
                    <ul kendo-menu
                        k-orientation="'horizontal'"
                        k-rebind="'horizontal'">
                        <li>
                            @Context.Session.GetString("CustomerName")
                            <ul>
                                <li><a class="dropdown-item" href="/account/profile">Hesabım</a></li>
                                <li>
                                    <a href="/account/orders" class="dropdown-item">Siparişlerim</a>
                                </li>
                                <li><a class="dropdown-item" href="/account/logout">Çıkış Yap</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul kendo-menu
                        k-orientation="'horizontal'"
                        k-rebind="'horizontal'">
                        <li>
                            <i class="k-icon k-i-user"></i>
                            <ul>
                                <li>
                                    <a href="/account/login" class="nav-link text-dark">Giriş Yap</a>
                                </li>
                                <li>
                                    <a href="/admin/login" class="nav-link text-dark">Yönetici Girişi</a>
                                </li>
                                <li>
                                    <a href="/account/register" class="nav-link text-dark">Üye Ol</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

