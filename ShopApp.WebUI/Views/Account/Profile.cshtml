
@{
    ViewData["Title"] = "Hesabım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_ProfileMenu")
    </div>
    <div class="col-md-9">
        <el-card class="box-card mb-3">
            <template #header>
                <h5><i class="el-icon-info"></i> Kullanıcı Bilgileri</h5>
            </template>
            <div class="row mt-3">
                <div class="col-md-6">


                    <form id="frmProfile">
                        <div class="mb-3">
                            <label class="form-label bold">Email Adresi</label>
                            <input kendo-text-box ng-model="customer.emailAddress" k-placeholder="'Email Adresi'" type="text" disabled class="w-100" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label bold">Adı</label>
                            <input kendo-text-box ng-model="customer.name" k-placeholder="'Adı'" type="text" class="w-100" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label bold">Soyadı</label>
                            <input kendo-text-box ng-model="customer.surname" k-placeholder="'Soyadı'" type="text" class="w-100" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label bold">Telefon No</label>
                            <input kendo-text-box ng-model="customer.phone" k-placeholder="'Telefon No'" type="text" class="w-100" />
                        </div>

                        <button type="submit" class="btn btn-success float-end">Kaydet</button>
                    </form>
                </div>
            </div>
        </el-card>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/customer/profile.js"></script>
}
