@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/dx.light.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet"/>
    <title>Shop App - Admin Paneli</title>
</head>
<body class="dx-viewport">
    <div class="container">
        <div class="row mt-3" ng-app="myApp">
            <div class="col-md-6 offset-md-3">
                <div class="card border-primary">
                    <div class="card-header bg-primary">
                        <div class="row">
                            <div class="col-9">
                                <div class="h5 text-white py-2">
                                    Admin Paneli - Giriş Yap
                                </div>
                            </div>
                            <div class="col-3">
                                <a class="text-white float-end text-decoration-none pt-1" href="/">
                                    <i class="dx-icon-home h2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body" ng-controller="loginController">
                        <form class="p-3" ng-submit="login($event)">
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label bold">Email Adresi</label>
                                <div class="col-sm-8">
                                    <div dx-text-box="txtEmailAddress" dx-validator="emailValidationRules"></div>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-4 col-form-label bold">Şifre</label>
                                <div class="col-sm-8">
                                    <div dx-text-box="txtPassword" dx-validator="passwordValidationRules"></div>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <div class="col-sm-8 offset-sm-4">
                                    <a href="/account/forgotpassword" class="btn btn-link text-dark">Şifremi Unuttum</a>
                                    <div class="float-end bg-primary text-white" dx-button="btnLogin"></div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/lib/jquery-3.6.0.min.js"></script>
    <script src="~/js/lib/bootstrap.bundle.min.js"></script>
    <script src="~/js/lib/angular.min.js"></script>
    <script src="~/js/lib/dx.all.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/pages/admin/login.js"></script>
</body>
</html>

