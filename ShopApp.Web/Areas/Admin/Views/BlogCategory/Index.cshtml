@{
    ViewData["Title"] = "Blog Kategorileri";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <style>
        #grid .k-grid-content, #grid tr td, #grid tr th {
            overflow: visible;
        }
    </style>
}

    <div class="card shadow">
        <div class="card-header py-3 bg-white">
            <div class="row">
                <div class="col-10">
                    <h5>Blog Kategorileri</h5>
                </div>
                <div class="col-2">
                    <a id="btnAdd" class="btn btn-outline-dark btn-sm float-end">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body py-5">
            <div class="table-responsive">
                <table class="table table-striped" id="grid">
                    <thead>
                        <tr class="fw-bold">
                            <th class="grid-buttons"></th>
                            <th width="300">
                                Adı
                            </th>
                            <th width="300">
                                Aktif mi?
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <script id="template" type="text/x-kendo-template">
                <tr data-uid="#= uid #">
                    <td class='grid-buttons'>
                        <button class="btn btn-secondary btn-sm blogCategoryEdit" data-id="#= id #">
                            <i class="fa fa-pencil"></i>
                        </button>
                        <button class="btn btn-danger btn-sm blogCategoryDelete" data-id="#= id #">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                    <td width="300">
                        <div>#: name #</div>
                    </td>
                    <td width="300">
                        <div>#: isActive ? 'Evet': 'Hayır' #</div>
                    </td>
                </tr>
            </script>
        </div>
    </div>


    <div class="modal fade" id="blogCategoryModal" data-bs-backdrop="static" tabindex="-1"
     aria-labelledby="blogCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="blogCategoryModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formBlogCategory">
                        <div class="mb-3">
                            <label class="form-label">Kategori Adı</label>
                            <input type="text"
                               id="txtBlogCategoryName"
                               name="txtBlogCategoryName"
                               class="w-100"
                               required
                               data-required-msg="Kategori adı giriniz." />
                            <span class="k-invalid-msg" data-for="txtBlogCategoryName"></span>
                        </div>
                        <div class="mb-3">
                            <input type="checkbox" id="chckIsActive" class="k-checkbox" checked="checked">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button"
                        data-bs-dismiss="modal"
                        class="btn btn-secondary float-end">
                        Kapat
                    </button>
                    <button id="btnSave"
                        type="submit"
                        class="btn btn-primary float-end">
                        Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
    <script src="~/js/pages/admin/blog-category.js"></script>
}
