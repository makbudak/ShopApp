
@{
    ViewData["Title"] = "Ürün Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="text-decoration-none text-secondary" href="/admin">Anasayfa</a></li>
        <li class="breadcrumb-item"><a class="text-decoration-none text-secondary" href="/admin/product">Ürünler</a></li>
        <li class="breadcrumb-item active" aria-current="page">Ürün Düzenle</li>
    </ol>
</nav>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-6"><h5 class="card-title mb-3">Ürün Düzenle</h5></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <input id="productId" type="hidden" value="@ViewBag.Id" />
                <div class="mb-3">
                    <label class="form-label">Kategoriler</label>
                    <select id="cmbCategories" multiple="multiple"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Ürün Adı</label>
                    <input id="txtName" name="name" class="w-100" required validationMessage="Ürün adı zorunludur" />
                </div>

                <div class="mb-3">
                    <label class="form-label">URL</label>
                    <input id="txtUrl" name="url" class="w-100" required validationMessage="URL zorunludur" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Fiyatı</label>
                    <input id="txtPrice" type="number" title="currency" min="0" class="w-100" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label></label>
                    <textarea id="txtDescription" rows="10" cols="30" style="width:100%; height:200px" aria-label="editor"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/pages/admin/product/productEdit.js"></script>
}
