@{
    ViewData["Title"] = "Hesabım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_ProfileMenu")
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="h4 py-3 card-header bg-white">
                <i class="k-icon k-i-information k-icon-md"></i>
                Kullanıcı Bilgileri
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="row">
                        <div class="col-md-6">
                            <form id="loginForm">
                                <div class="mb-3 mt-3">
                                    <label class="form-label">Email Adresi</label>
                                    <input type="email"
                                           id="txtEmailAddress"
                                           name="txtEmailAddress"
                                           class="w-100" />
                                </div>

                                <div class="mb-3 mt-3">
                                    <label class="form-label">Adı</label>
                                    <input type="text"
                                           id="txtName"
                                           name="txtName"
                                           class="w-100"
                                           required
                                           data-required-msg="Adı giriniz." />
                                    <span class="k-invalid-msg" data-for="txtName"></span>
                                </div>

                                <div class="mb-3 mt-3">
                                    <label class="form-label">Soyadı</label>
                                    <input type="text"
                                           id="txtSurname"
                                           name="txtSurname"
                                           class="w-100"
                                           required
                                           data-required-msg="Soyadı giriniz." />
                                    <span class="k-invalid-msg" data-for="txtSurname"></span>
                                </div>

                                <div class="mb-3 mt-3">
                                    <label class="form-label">Telefon</label>
                                    <input type="text"
                                           id="txtPhone"
                                           name="txtPhone"
                                           class="w-100"
                                           required
                                           data-required-msg="Telefon giriniz." />
                                    <span class="k-invalid-msg" data-for="txtPhone"></span>
                                </div>

                                <div class="mb-3">
                                    <button id="btnProfile"
                                            type="submit"
                                            class="btn btn-primary float-start">
                                        Kaydet
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/frontend/account/profile.js"></script>
}
